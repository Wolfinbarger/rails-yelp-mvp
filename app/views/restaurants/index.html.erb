<h1><%= link_to 'Restaurants', new_restaurant_path%>Restaurants</h1>
<h3> <%= link_to 'Create new restaurant', new_restaurant_path%> </h3>

<% @restaurants.each do |resturant| %>
  <div class="card-trip">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-trip-infos">
    <div>
      <h2> <%= resturant.name %> </h2>
      <p> <%= resturant.address %> </p>
      <p> <%= resturant.phone_number %> </p>

    </div>
    <h6> <%= resturant.category.upcase %> </h6>
  </div>
  </div>
<% end %>
